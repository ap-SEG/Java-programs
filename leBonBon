 new leBonBon ();
    }

    public leBonBon ()
    {
 System.out.println ("C A R A M E L S.");
 int caram = IBIO.inputInt ("How many caramels? ");
 if (caram < 1)
 {
     System.out.println ("Won't you try one?");
