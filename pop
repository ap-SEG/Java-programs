public class pop
{
    public static void main (String args[])
    {

 for (int num = 100 ; num >= 2 ; num--)
 {
     System.out.println (num + " bottles of pop on the wall.");
     System.out.println (num + " bottles of pop.");
     System.out.println ("If one of those bottles should happen to fall. . .");
     System.out.println ("There would be " + (num - 1) + " bottles of pop on the wall.");
     System.out.println ("\n");
 }
 System.out.println ("1 bottle of pop on the wall.");
 System.out.println ("1 bottle of pop.");
 System.out.println ("If one of those bottles should happen to fall. . .");
 System.out.println ("There would be no more bottles of pop on the wall.");
 System.out.println ("\n");
    }
}
